name = Nationaal ZorgFonds
description = Theme voor nationaalzorgfonds.nl
package = Other
version = 2.0
core = 7.x
;base theme = spruit



; LEGACY SPRUIT THEME
stylesheets[all][]    = css-legacy/normalize.css
stylesheets[screen][] = fonts/SPruit-icons.css
stylesheets[screen][] = css-legacy/basic-html.css
stylesheets[screen][] = css-legacy/page.css
stylesheets[screen][] = css-legacy/page-sections.css
stylesheets[screen][] = css-legacy/navigation.css
stylesheets[screen][] = css-legacy/navigation-icons.css
stylesheets[screen][] = css-legacy/search.css
stylesheets[screen][] = css-legacy/content-asides.css
stylesheets[screen][] = css-legacy/content-images.css
stylesheets[screen][] = css-legacy/highlight.css
stylesheets[screen][] = css-legacy/interface.css
stylesheets[screen][] = css-legacy/forms.css
stylesheets[screen][] = css-legacy/footer.css
stylesheets[screen][] = css-legacy/helper-classes.css

; New NZF theme
stylesheets[screen][] = css/legacy.css
stylesheets[screen][] = css/main.css

; Tweaks of modules
stylesheets[screen][] = css-legacy/modules/book.css
stylesheets[screen][] = css-legacy/modules/owl.carousel.css

; Centralized media queries
stylesheets[screen][] = css-legacy/media/screen-max-480px.css

; JavaScript
scripts[] = js/vendor/modernizr-2.8.3.min.js
scripts[] = js/vendor/jquery.waypoints.min.js
scripts[] = js/vendor/owl.carousel.min.js
scripts[] = js/main.js
scripts[] = js/spruit_nzf.js

; Regions
regions[highlight] = Highlighted content
regions[content]   = Primary content
regions[footer]    = Footer content
regions[search]    = Search

; Breakpoints 
breakpoints[w320]  = (max-width: 320px)
breakpoints[w480]  = (min-width: 480px)
breakpoints[w680]  = (min-width: 680px)
breakpoints[w960]  = (min-width: 960px)
breakpoints[w1280] = (min-width: 1280px)
breakpoints[w1440] = (min-width: 1440px)

; Panels support
plugins[panels][layouts] = layouts

; Unset these css
settings[unset_styles][] = modules/system/system.menus.css
settings[unset_styles][] = modules/system/system.messages.css
settings[unset_styles][] = modules/system/system.theme.css
settings[unset_styles][] = modules/field/theme/field.css
settings[unset_styles][] = modules/node/node.css
settings[unset_styles][] = modules/user/user.css
settings[unset_styles][] = modules/book/book.css




